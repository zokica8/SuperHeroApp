<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/hero_bg_gradient"
    android:layoutDirection="ltr"
    android:padding="20dp">

    <ImageView
        android:id="@+id/superhero_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:scaleType="fitXY"
        android:adjustViewBounds="true"
        android:layout_marginTop="20dp"
        android:layout_gravity="left"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textViewSuperHeroName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/editText"
        android:gravity="center"
        android:textSize="24sp"/>

    <TextView
        android:id="@+id/textViewSuperHeroDescription"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="@color/editText"
        android:gravity="center"
        android:textSize="16sp"/>

        <TextView
            android:id="@+id/textViewSuperHeroPrimaryPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/editText"
            android:gravity="center"
            android:textSize="12sp"/>

        <TextView
            android:id="@+id/textViewSuperHeroSecondaryPower"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/editText"
            android:gravity="center"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>